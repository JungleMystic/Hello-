<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/name_list_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingTop="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/frList_profilePic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintHorizontal_bias="0.10"
        app:civ_border_width="1dp"
        android:src="@drawable/profile_icon"
        app:civ_circle_background_color="@color/light_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/name_card"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/name_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="8dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/cardBackground">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/frList_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:padding="10dp"
            tools:text="@string/sample_name"
            android:textSize="14sp"
            android:textColor="@color/blackNwhite" />

        <ImageView
            android:id="@+id/onlineStatusIcon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:src="@drawable/round_icon"
            app:tint="@color/onlineStatus"
            android:paddingTop="3dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>