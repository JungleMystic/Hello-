<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="80dp"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    android:background="@color/background">

    <androidx.cardview.widget.CardView
        android:id="@+id/message_sent_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_alignParentEnd="true"
        app:cardBackgroundColor="@color/sent_message_background">

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sent_message_hint"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/sent_text_color"/>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/image_holder"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/message_sent_card"
        android:src="@drawable/image_placeholder"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_below="@id/image_holder"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currentTime_hint"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="10sp"
        android:textColor="@color/blackNwhite"
        android:gravity="end"/>

    <TextView
        android:id="@+id/currentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currentDate_hint"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="10sp"
        android:textColor="@color/blackNwhite"
        android:gravity="end"
        android:layout_marginEnd="5dp"/>

    </LinearLayout>

</RelativeLayout>