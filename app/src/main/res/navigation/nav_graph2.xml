<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph2"
    app:startDestination="@id/friendsChatListFragment">

    <fragment
        android:id="@+id/friendsChatListFragment"
        android:name="com.lrm.hello.fragments.FriendsChatListFragment"
        android:label="fragment_friends_chat_list"
        tools:layout="@layout/fragment_friends_chat_list" >
        <action
            android:id="@+id/action_friendsChatListFragment_to_findFriendsFragment"
            app:destination="@id/findFriendsFragment" />
        <action
            android:id="@+id/action_friendsChatListFragment_to_friendRequestsFragment"
            app:destination="@id/friendRequestsFragment" />
        <action
            android:id="@+id/action_friendsChatListFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_friendsChatListFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/findFriendsFragment"
        android:name="com.lrm.hello.fragments.FindFriendsFragment"
        android:label="fragment_find_friends"
        tools:layout="@layout/fragment_find_friends" >
        <action
            android:id="@+id/action_findFriendsFragment_to_friendsChatListFragment"
            app:destination="@id/friendsChatListFragment"
            app:popUpTo="@id/friendsChatListFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_findFriendsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/friendRequestsFragment"
        android:name="com.lrm.hello.fragments.FriendRequestsFragment"
        android:label="fragment_friend_requests"
        tools:layout="@layout/fragment_friend_requests" >
        <action
            android:id="@+id/action_friendRequestsFragment_to_friendsChatListFragment"
            app:destination="@id/friendsChatListFragment"
            app:popUpTo="@id/friendsChatListFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_friendRequestsFragment_to_friendRequestProfileFragment"
            app:destination="@id/friendRequestProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.lrm.hello.fragments.UserProfileFragment"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" >
        <action
            android:id="@+id/action_userProfileFragment_to_friendsChatListFragment"
            app:destination="@id/friendsChatListFragment"
            app:popUpTo="@id/friendsChatListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.lrm.hello.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_findFriendsFragment"
            app:destination="@id/findFriendsFragment"
            app:popUpTo="@id/findFriendsFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="profileUid"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/friendRequestProfileFragment"
        android:name="com.lrm.hello.fragments.FriendRequestProfileFragment"
        android:label="FriendRequestProfileFragment" >
        <action
            android:id="@+id/action_friendRequestProfileFragment_to_friendRequestsFragment"
            app:destination="@id/friendRequestsFragment"
            app:popUpTo="@id/friendRequestsFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="profileUid"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.lrm.hello.fragments.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/action_chatFragment_to_friendsChatListFragment"
            app:destination="@id/friendsChatListFragment"
            app:popUpTo="@id/friendsChatListFragment"
            app:popUpToInclusive="true" />
        <argument android:name="friendUid"
            app:argType="string" />
    </fragment>
</navigation>